rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow create;
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin || (request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['fullName', 'phoneNumber', 'birthdate', 'occupation']));
    }

    match /users/{userId}/workouts/{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
    }

    match /users/{userId}/{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
    }
    
    match /exercises/{exerciseId} {
    	allow read;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
    }

    match /checkIns/{checkInId} {
    	allow write: if request.auth != null;
      allow read: if resource.data.userUid == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
    }

    match /publications/{publicationId} {
    	allow read: if resource.data.isPublished || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
    }
  }
}
